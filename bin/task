#!/bin/bash

. ./task-vars

# SCRIPT_DIR=$(dirname "$(readlink -f "$0")")

TOTAL_TASK_PATHS=(${TASK_PATHS[@]} "./node_modules/task-library/src")

function task() {
    TASK_NAME=$1
    for TASK_PATH in "${TOTAL_TASK_PATHS[@]}"; do [ -f "$TASK_PATH/$TASK_NAME" ] && TASK_FILE="$TASK_PATH/$TASK_NAME" && break; done
    [ -z "$TASK_FILE" ] && echo "Task "$TASK_NAME" not found" && exit 1
    echo "Task "$TASK_FILE" started"
    "$TASK_FILE" "${@:2}"
    EXIT_CODE=$?
    echo
    echo "Task "$TASK_FILE" completed with exit code $EXIT_CODE"
}

time task $@
echo
exit $EXIT_CODE
