#!/bin/bash

export SEP=" | "
export TASK_LIBRARY_ROOT="./node_modules/task-library"
export SUPPORTED_TEST_RUNNERS="jest | mocha | tap | tape | zora"

export NORM=$(tput sgr0)
export BOLD=$(tput bold)
export RED=$(tput setaf 1)
export GRE=$(tput setaf 2)
export YEL=$(tput setaf 3)

function import {
    local module_path="$TASK_LIBRARY_ROOT/src/bash/$1"
    for script_path in "$module_path"/*.sh; do
        source "$script_path"
    done
}

import "util"
import "lib"
import "tasks"
load_vars && run_task "$@"
