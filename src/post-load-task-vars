#!/bin/bash

export DISPLAY_NAME=${DISPLAY_NAME:=$PACKAGE_NAME}
export WEB_URL="https://$WEB_HOST_NAME$WEB_BASE_PATH"
export INDEX_HTML_TITLE=${INDEX_HTML_TITLE:=$DISPLAY_NAME}
export INDEX_HTML_URL=${INDEX_HTML_URL:=$WEB_URL}

if [[ ! "$WEB_HOST_NAME" == *".github.io" ]]; then
    export GITHUB_PAGES_CNAME=${GITHUB_PAGES_CNAME:=$WEB_HOST_NAME}
fi
