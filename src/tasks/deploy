#!/bin/bash

tasks=()

is_on_npm && tasks+=("npm-deploy")
is_on_ghp && tasks+=("github-pages-deploy")
is_on_sls && tasks+=("sls-deploy")

[ ${#tasks[@]} = 0 ] && echo "Couldn't infer what to deploy" && exit 1

echo
echo "The following tasks will be run:"

for task_name in "${tasks[@]}"; do
    echo "â€¢ ${task_name}"
done

ask_continue

for task_name in "${tasks[@]}"; do
    npx task "$task_name"
done
