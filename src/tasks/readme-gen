#!/bin/bash
  
set -e

[ ! -f "$README_TEMPLATE" ] && echo "README template not found"

 node_command="node"
 node_options=""

if has_any_dependency "@node-loader/babel"; then
    node_options="--experimental-loader @node-loader/babel"
elif has_any_dependency "@babel/core"; then
    node_command="babel-node"
fi

NODE_OPTIONS="$node_options" \
$node_command "$README_GEN" > "$README"

npx task doctoc

git add "$README"
