#!/bin/bash
  
set -e

[ ! -f "$README_TEMPLATE" ] && echo "README template not found"

if $(has_dev_dependency "@node-loader/babel") = "true"; then
    export NODE_OPTIONS="--experimental-loader @node-loader/babel"
fi

BABEL_ENV="task" \
node "$README_GEN" > "$README"

npx task doctoc

git add "$README"
